{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MusicRelease",
  "description": "Reusable schema describing a music release for the ReleaseShowcase pattern.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "artwork",
    "links"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable identifier suitable for use as a React key.",
      "pattern": "^[a-z0-9]+(?:[._-][a-z0-9]+)*$"
    },
    "title": {
      "type": "string",
      "description": "Primary release title."
    },
    "subtitle": {
      "type": "string",
      "description": "Optional secondary line that appears beneath the title."
    },
    "type": {
      "type": "string",
      "description": "Categorisation of the release (single, EP, album, etc.).",
      "enum": [
        "Single",
        "EP",
        "LP",
        "Album",
        "Remix",
        "Compilation",
        "Mixtape",
        "Live"
      ]
    },
    "releaseDate": {
      "type": "string",
      "format": "date",
      "description": "ISO-8601 release date string (YYYY-MM-DD)."
    },
    "catalogNumber": {
      "type": "string",
      "description": "Optional catalogue or UPC identifier."
    },
    "artwork": {
      "type": "object",
      "description": "Artwork metadata for the release.",
      "required": [
        "src"
      ],
      "additionalProperties": false,
      "properties": {
        "src": {
          "type": "string",
          "description": "Path or URL to the artwork asset."
        },
        "alt": {
          "type": "string",
          "description": "Accessible alternative text describing the artwork."
        },
        "width": {
          "type": "integer",
          "minimum": 0,
          "description": "Intrinsic width in pixels."
        },
        "height": {
          "type": "integer",
          "minimum": 0,
          "description": "Intrinsic height in pixels."
        },
        "credit": {
          "type": "string",
          "description": "Optional credit line for the artwork illustrator or photographer."
        }
      }
    },
    "links": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "url"
        ],
        "properties": {
          "platform": {
            "type": "string",
            "description": "Short identifier for the platform (spotify, youtube, etc.)."
          },
          "label": {
            "type": "string",
            "description": "Textual label shown to users."
          },
          "icon": {
            "type": "string",
            "description": "Icomoon glyph name to render for the link."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Link destination."
          },
          "priority": {
            "type": "integer",
            "minimum": 0,
            "description": "Links sort ascending by priority before being displayed."
          }
        }
      }
    },
    "theme": {
      "type": "string",
      "enum": [
        "light",
        "dark"
      ],
      "description": "Explicitly select the visual theme for this release."
    },
    "layout": {
      "type": "string",
      "enum": [
        "art-left",
        "art-right"
      ],
      "description": "Control whether the artwork appears to the left or right of the metadata."
    },
    "genres": {
      "type": "array",
      "description": "Optional list of genre tags.",
      "items": {
        "type": "string"
      }
    },
    "moods": {
      "type": "array",
      "description": "Optional list of descriptive moods or themes.",
      "items": {
        "type": "string"
      }
    }
  }
}
